{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Go Remote",
      "type": "go",
      "request": "attach",
      "mode": "remote",
      "remotePath": "/usr/src/app",
      "port": 40000,
      "host": "127.0.0.1",
      "showLog": true,
      "substitutePath": [
        {
          "from": "${workspaceFolder}",
          "to": "/usr/src/app"
        }
      ]
    }
  ]
}
